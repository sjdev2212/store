<section class='slider' data-controller="slideshow" data-slideshow-index-value="0">
    <div class='slider-buttons'>
        <button class='arrow' data-action="slideshow#previous">
            <%= image_tag "left.svg", class:'left-svg' %>
        </button>
    </div>
    <div class=' shower'>
        <div data-slideshow-target="slide">
            <%= link_to 'items/cat/Mobile', class: 'deco' do %>
            <div class='slide-card'>
                <p class='slide-card-text'>
                    Mobile
                </p>
                <%= image_tag "cell.png", class:'mobile_image' %>
            </div>
            <% end %>
        </div>

        <div data-slideshow-target="slide">
            <%= link_to 'items/cat/TV' , class:'deco'  do %>
            <div class='slide-card'>
                <p class='slide-card-text'>
                    TV
                </p>
                <%= image_tag "tv.png", class:'mobile_image' %>
            </div>
            <% end %>
        </div>



        <div data-slideshow-target="slide">
            <%= link_to 'items/cat/Notebooks' , class:'deco'  do %>
            <div class='slide-card'>
                <p class="slide-card-text">Notebooks</p>
                <%= image_tag "notebook.png", class: 'mobile_image' %>
            </div>
            <% end %>
        </div>


        <div data-slideshow-target="slide">
            <%= link_to 'items/cat/Gaming' , class:'deco'  do %>
            <div class='slide-card'>
                <p class="slide-card-text">Gaming</p>
                <%= image_tag "gaming.png", class: 'mobile_image' %>
            </div>
            <% end %>
        </div>



    </div>

    <div class='slider-buttons'>
        <button class='arrow' data-action="slideshow#next">
            <%= image_tag "right.svg", class:'left-svg' %>
        </button>
    </div>
</section>


<%= turbo_frame_tag "items_list" do %>
  <ul class="items-list">
    <% @items.each do |item| %>
      <%= render "items/item", item: item %>
    <% end %>
  </ul>
<% end %>