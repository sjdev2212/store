<%= turbo_frame_tag dom_id(item) do %>
  <%= form_with model: item, local: false do |form| %>
<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
</div>

<div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
</div>

<div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
</div>
<div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
</div>
<div>
    <%=form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
</div>

    <%= form.submit "Save" %>
  <% end %>
<% end %>